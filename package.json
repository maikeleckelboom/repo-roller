{
  "name": "repo-roller",
  "version": "1.0.0",
  "description": "Aggregate source code into a single Markdown file",
  "type": "module",
  "bin": {
    "repo-roller": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
