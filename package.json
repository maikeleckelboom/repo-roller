  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "@types/react": "^19.2.2",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.3",
    "ignore": "^6.0.2",
    "ink": "^6.4.0",
    "ink-tree-select": "^2.3.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/ui": "^4.0.8",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
