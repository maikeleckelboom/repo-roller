{
  "name": "repo-roller",
  "version": "1.0.0",
  "description": "Context Engine for LLMs - Aggregate source code into optimized formats for AI assistants",
  "type": "module",
  "bin": {
    "repo-roller": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:check": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "interactive": "tsx src/cli.ts --interactive",
    "ui": "tsx src/cli.ts --interactive",
    "quick": "tsx src/cli.ts",
    "snapshot": "tsx src/cli.ts --preset llm",
    "docs": "tsx src/cli.ts --preset docs -o docs.md",
    "preview": "tsx src/cli.ts --dry-run",
    "stats": "tsx src/cli.ts --stats-only",
    "init": "tsx src/cli.ts init",
    "prod:interactive": "npm run build && node dist/cli.js --interactive",
    "prod:ui": "npm run build && node dist/cli.js --interactive",
    "help": "tsx src/cli.ts --help",
    "examples": "tsx src/cli.ts --examples",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .vitest",
    "purge": "rm -rf node_modules dist coverage .vitest package-lock.json",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepack": "npm run build",
    "changeset": "changeset",
    "release": "changeset publish",
    "version": "changeset version"
  },
  "keywords": [
    "cli",
    "llm",
    "ai",
    "context",
    "source-code",
    "aggregator",
    "markdown",
    "documentation",
    "claude",
    "gpt",
    "gemini",
    "codebase",
    "token-counting"
  ],
  "author": "Maikel Eckelboom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maikeleckelboom/repo-roller.git"
  },
  "bugs": {
    "url": "https://github.com/maikeleckelboom/repo-roller/issues"
  },
  "homepage": "https://github.com/maikeleckelboom/repo-roller#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "@types/react": "^19.2.2",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.3",
    "ignore": "^6.0.2",
    "ink": "^6.4.0",
    "ink-tree-select": "^2.3.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.1.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.39.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "gpt-tokenizer": "^3.4.0",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  }
}
