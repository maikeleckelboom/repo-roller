# ============================================================================
# Repo Roller - Environment Configuration
# ============================================================================
# Copy this file to .env and customize the values for your environment.
# All settings have sensible defaults - only override what you need.
# ============================================================================

# ============================================================================
# INTERACTIVE UI SETTINGS
# ============================================================================

# Maximum height of interactive view as percentage of screen (0.0 to 1.0)
# Lower values leave more room for terminal output
INTERACTIVE_MAX_HEIGHT_PERCENTAGE=0.65

# Cursor blink interval in milliseconds
CURSOR_BLINK_INTERVAL=500

# Number of reserved lines for headers/footers in interactive mode
INTERACTIVE_RESERVED_LINES=6

# Additional buffer for terminal overlays (e.g., Warp sticky header)
INTERACTIVE_TERMINAL_OVERLAY_BUFFER=10

# Minimum visible rows in interactive tree view
INTERACTIVE_MIN_VISIBLE_ROWS=5

# ============================================================================
# TREE VIEW COLUMN WIDTHS
# ============================================================================

# Width of selection checkbox column
TREE_COLUMN_SELECTION=3

# Width of expand/collapse marker column
TREE_COLUMN_EXPAND=2

# Width of icon column (Nerd Fonts or ASCII)
TREE_COLUMN_ICON=3

# Width of file type hint column
TREE_COLUMN_HINT=8

# ============================================================================
# TREE THEME COLORS (ANSI color names)
# ============================================================================
# Valid colors: black, red, green, yellow, blue, magenta, cyan, white
# Add 'Bright' suffix for bright variants (e.g., greenBright)
# Use 'gray' or 'grey' for dim text

TREE_COLOR_FOLDER=blueBright
TREE_COLOR_TYPESCRIPT=blue
TREE_COLOR_JAVASCRIPT=yellow
TREE_COLOR_TEST=magentaBright
TREE_COLOR_DOC=cyanBright
TREE_COLOR_CONFIG=gray
TREE_COLOR_LOCKFILE=gray
TREE_COLOR_DEFAULT=white
TREE_COLOR_SELECTED=greenBright
TREE_COLOR_PARTIAL=yellowBright
TREE_COLOR_UNSELECTED=gray
TREE_COLOR_CURSOR=cyanBright
TREE_COLOR_DIM=gray

# ============================================================================
# TREE MARKERS (Unicode symbols)
# ============================================================================

TREE_MARKER_SELECTED=◉
TREE_MARKER_UNSELECTED=○
TREE_MARKER_PARTIAL=◐
TREE_MARKER_EXPANDED=⌄
TREE_MARKER_COLLAPSED=›
TREE_MARKER_LEAF=

# ============================================================================
# TREE BRANCH CHARACTERS (Unicode box drawing)
# ============================================================================

TREE_BRANCH_VERTICAL=│
TREE_BRANCH_TEE=├
TREE_BRANCH_CORNER=└
TREE_BRANCH_HORIZONTAL=─
TREE_BRANCH_SPACE=

# ============================================================================
# TOKEN ESTIMATION SETTINGS
# ============================================================================

# Base characters per token ratio (BPE tokenizer average)
TOKEN_CHARS_PER_TOKEN=4.0

# Large content threshold in bytes (for simplified estimation)
TOKEN_LARGE_CONTENT_THRESHOLD=100000

# Whitespace density thresholds (0.0 to 1.0)
TOKEN_WHITESPACE_HIGH=0.30
TOKEN_WHITESPACE_MEDIUM=0.25
TOKEN_WHITESPACE_LOW=0.20

# Symbol density thresholds (0.0 to 1.0)
TOKEN_SYMBOL_VERY_HIGH=0.35
TOKEN_SYMBOL_HIGH=0.25
TOKEN_SYMBOL_MEDIUM=0.20

# Whitespace correction factors (multipliers)
TOKEN_WHITESPACE_CORRECTION_HIGH=0.85
TOKEN_WHITESPACE_CORRECTION_MEDIUM=0.90
TOKEN_WHITESPACE_CORRECTION_LOW=0.95

# Symbol density correction factors (multipliers)
TOKEN_SYMBOL_CORRECTION_VERY_HIGH=1.25
TOKEN_SYMBOL_CORRECTION_HIGH=1.15
TOKEN_SYMBOL_CORRECTION_MEDIUM=1.05

