# ============================================================================
# DEFAULT CONFIGURATION OPTIONS
# ============================================================================

# Maximum file size in bytes (1MB default)
DEFAULT_MAX_FILE_SIZE_BYTES=1048576

# Maximum nested folders for smart naming
DEFAULT_MAX_NESTED_FOLDERS=4

# Default output file name
DEFAULT_OUTPUT_FILE=source_code.md

# Default output format (md, json, txt, xml)
DEFAULT_OUTPUT_FORMAT=md

# Default profile
DEFAULT_PROFILE=llm-context

# Default indentation for JSON output
DEFAULT_INDENT=2

# Strip comments by default (true/false)
DEFAULT_STRIP_COMMENTS=false

# Include tree by default (true/false)
DEFAULT_WITH_TREE=true

# Include stats by default (true/false)
DEFAULT_WITH_STATS=true

# Token counting enabled by default (true/false)
DEFAULT_TOKEN_COUNT=true

# Show LLM report by default (true/false)
DEFAULT_SHOW_LLM_REPORT=false

# Display settings (true/false for each)
DEFAULT_SHOW_GENERATION_SUMMARY=true
DEFAULT_SHOW_CODE_COMPOSITION=true
DEFAULT_SHOW_CONTEXT_FIT=true
DEFAULT_SHOW_HEALTH_HINTS=true
DEFAULT_SHOW_TOKEN_WARNINGS=true
DEFAULT_SHOW_COST_ESTIMATES=true
DEFAULT_SHOW_RECOMMENDATIONS=true

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Daemon cache TTL in milliseconds (5 minutes default)
DAEMON_CACHE_TTL=300000

# Daemon cache max size (number of projects)
DAEMON_CACHE_MAX_SIZE=10

# Binary file detection sample size in bytes
BINARY_FILE_SAMPLE_SIZE=8192

# Binary file detection threshold (0.0 to 1.0)
BINARY_FILE_THRESHOLD=0.30

# History max entries
HISTORY_MAX_ENTRIES=1000

# ============================================================================
# BUDGET SETTINGS
# ============================================================================

# EUR to USD conversion rate
BUDGET_EUR_USD_CONVERSION=1.08

# Markdown overhead factor
BUDGET_MARKDOWN_OVERHEAD=1.08

